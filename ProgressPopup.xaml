<Window x:Class="StardewValley_Mod_Manager.ProgressPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StardewValley_Mod_Manager"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="ProgressPopup" Height="150" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Name="LoadingGif" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="35" Margin="0,0,0,-10"/>
        <ProgressBar Name="ProgressBar" Margin="10" Height="30" VerticalAlignment="Top"/>
        <Button Content="Cancel" Name="CancelButton" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="CancelButton_Click"/>
    </Grid>
</Window>
